<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shakein.MainActivity$PlaceholderFragment" >

	<TextView
        android:id="@+id/text_ShakeIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ShakeIn"
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold" />
	 <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginTop="200dp"
            android:background="#C0C0C0" />

    <Switch
        android:id="@+id/switch_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="开启ShakeIn解锁"
        android:textColor="#000000"
        android:textSize="22sp" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="270dp"
        android:background="#C0C0C0" />
    
    <TextView
        android:id="@+id/text_rePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="重新设置摇晃密码"
        android:layout_marginTop="290dp"
        android:textColor="#000000"
        android:textSize="22sp"
		/>
        
	
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2px"
			android:layout_marginTop="340dp"
            android:background="#C0C0C0" />
        
        <TextView
        android:id="@+id/text_reWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="重新设置密保口令"
        android:layout_marginTop="360dp"
        android:textColor="#000000"
        android:textSize="22sp"/>




        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2px"
			android:layout_marginTop="400dp"
            android:background="#C0C0C0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text_rePass"
            android:layout_alignBottom="@+id/text_rePass"
            android:layout_alignRight="@+id/text_rePass"
            android:text="OK" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text_reWord"
            android:layout_alignBottom="@+id/text_reWord"
            android:layout_alignRight="@+id/text_reWord"
            android:text="OK" />



</RelativeLayout>
