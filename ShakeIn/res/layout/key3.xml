<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ededed"
              android:orientation="vertical">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff">

         <Button
             android:id="@+id/button_back_key3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginTop="7dp"
             android:background="#ffffff"
             android:text="取消"
             android:textSize="24sp"
             android:textColor="#FF4081" />

         <TextView
             android:id="@+id/key3_textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="重设密保口令"
             android:textColor="#000000"
             android:textSize="24sp"
             android:textStyle="bold" 
             android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/acitivty_info_findview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:text="原密保口令"
            android:textSize="20sp"
            android:textColor="#808080"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="原口令"
                android:textSize="20sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/old_password_key3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="48dp"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:background="@drawable/number_shape"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24sp"
            android:text="新密保口令"
            android:textSize="20sp"
            android:textColor="#808080"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="新口令"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/new_password_key3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="48dp"
                android:background="@drawable/number_shape"
                android:hint="New Password"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="输入确认"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/confirm_password_key3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="48dp"
                android:background="@drawable/number_shape"
                android:hint="Verify password"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:paddingLeft="16dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_confirm_key3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/shape_bt"
            android:text="确认"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>