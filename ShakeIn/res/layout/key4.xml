<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff">

         <Button
             android:id="@+id/button_back_key4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginTop="7dp"
             android:background="#ffffff"
             android:text="取消"
             android:textSize="24sp"
             android:textColor="#FF4081" />

         <TextView
             android:id="@+id/key4_textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="设置密保口令"
             android:textColor="#000000"
             android:textSize="24sp"
             android:textStyle="bold" 
             android:textAppearance="?android:attr/textAppearanceLarge" />

    	</RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <EditText
            android:id="@+id/password1_key4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/top_et"
            android:hint="输入密保口令"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/password2_key4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/botttom_et"
            android:hint="重复输入确认"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="20sp"/>


        <Button
            android:id="@+id/button2_key4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_bt"
            android:text="确认"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>
